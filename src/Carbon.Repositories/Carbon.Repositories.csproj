<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Carbon.Repositories</AssemblyName>
    <VersionPrefix>1.3.0</VersionPrefix>
    <Authors>iamcarbon</Authors>
    <TargetFrameworks>netstandard1.6;net451</TargetFrameworks>

    <!-- Package Info -->
    <Description>Repository abstractions.</Description>
    <AssemblyTitle>Carbon Repositories</AssemblyTitle>
    <PackageId>Carbon.Repositories</PackageId>
    <PackageTags>git;carbon</PackageTags>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/carbon/Platform</RepositoryUrl>
  </PropertyGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <PackageReference Remove="NETStandard.Library" />
    <PackageReference Include="System.Runtime" Version="4.3.0" />
    <PackageReference Include="System.Threading.Tasks" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
 
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Carbon.Storage" Version="1.6.0" />
  </ItemGroup>
</Project>
