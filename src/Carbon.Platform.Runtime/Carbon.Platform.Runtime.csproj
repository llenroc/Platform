<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Carbon.Platform.Runtime</AssemblyName>
    <VersionPrefix>0.10.0</VersionPrefix>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>

    <Authors>iamcarbon</Authors>
    <AssemblyTitle>Carbon Runtime</AssemblyTitle>
    <Description>Provides a helper class for reading the current hosts environment &amp; hardware.</Description>
    <Copyright>Copyright(c) Jason Nelson</Copyright>
    <PackageId>Carbon.Platform.Runtime</PackageId>
    <PackageTags>carbon</PackageTags>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/carbon/Platform</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Carbon.Json" Version="1.2.1" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <PackageReference Remove="NETFramework.Library" />
    <PackageReference Include="System.Runtime" Version="4.3.0" />
    <PackageReference Include="System.IO.FileSystem.DriveInfo" Version="4.3.0" />
    <PackageReference Include="System.Net.NetworkInformation" Version="4.3.0" />
    <PackageReference Include="System.Net.Http" Version="4.3.0" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

</Project>
